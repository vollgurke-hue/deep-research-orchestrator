      "on_fail": "continue",
      "output": "final",
      "context_from_previous": true
    }
  ],
  "reasoning_strategy": "CoT",
  "recommended_model": "tier1_fast",
  "output_aggregation": "merge_all",
  "temperature": 0.5,
