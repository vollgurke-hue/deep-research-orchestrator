{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Framework Schema",
  "description": "Schema for complete research framework definitions (chains of phases)",
  "type": "object",
  "required": ["framework_id", "name", "type", "building_blocks"],
  "properties": {
    "framework_id": {
      "type": "string",
      "description": "Unique identifier for this framework",
      "pattern": "^framework_[a-z0-9_]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "description": {
      "type": "string",
      "description": "What this framework accomplishes"
    },
    "type": {
      "type": "string",
      "enum": ["framework"],
      "description": "Must be 'framework'"
    },
    "building_blocks": {
      "type": "array",
      "description": "Phases that compose this framework",
      "items": {
        "type": "object",
        "required": ["block_type", "block_id", "order"],
        "properties": {
          "block_type": {
            "type": "string",
            "enum": ["phase"],
            "description": "Must be 'phase'"
          },
          "block_id": {
            "type": "string",
            "description": "ID of the phase"
          },
          "order": {
            "type": "integer",
            "minimum": 1,
            "description": "Execution order"
          },
          "depends_on": {
            "type": "string",
            "description": "phase_id that must complete before this one"
          },
          "optional": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "global_exit_criteria": {
      "type": "object",
      "description": "Framework-level exit criteria",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["all_phases_complete", "confidence_threshold", "custom"]
        },
        "threshold": {
          "type": "number"
        }
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}
